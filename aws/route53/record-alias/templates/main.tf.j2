# Creates:
# - A Route53 hostname


# Create an ALIAS record for the resource (ELB, S3 website, etc)
resource "aws_route53_record" "hostanme" {
  zone_id = "${var.zone_id}"
  name    = "${var.name}"
  type    = "A"
  alias {
    name                   = "${var.alias_name}"
    zone_id                = "${var.alias_zone_id}"
    evaluate_target_health = true
  }
}
